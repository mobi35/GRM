<script>

    $(document).ready(function () {

        $.ajax({
            url: '/Admin/GetCredit',
            type: 'POST',
            data: { user: $('.users').val() },
            success: function (e) {
            
                $('.credits').html("Current Credits: " + e);
            }
        });
    });

    $('.users').change(function () {
        $.ajax({
            url: '/Admin/GetCredit',
            type:'POST',
            data: {user:$(this).val()},
            success: function (e) {
           
                $('.credits').html("Current Credits: " + e);
            }
        });
      

    });




    $('.sendCredits').click(function () {

        $.ajax({

            url: '/Admin/AddCredit',
            type: 'POST',
            data: { users:$('.users').val(),number:$('.number').val(),month:$('.month').val()  },
            success: function (e) {
        
              if (e == "success") {
                    $.sweetModal({
                        content: $('.number').val() + ' Credits added to ' + $('.users').val(),
                        icon: $.sweetModal.ICON_SUCCESS,
                        theme: $.sweetModal.THEME_DARK
                    });
                    $('.number').val('');

              }else    if (e != "") {
                  $.sweetModal({
                      content: e,
                      icon: $.sweetModal.ICON_SUCCESS,
                      theme: $.sweetModal.THEME_DARK
                  });
              }else  {
                    $.sweetModal({
                        content: 'Please fill the field with numbers',
                        icon: $.sweetModal.ICON_WARNING,
                        theme: $.sweetModal.THEME_DARK
                    });

                }
              

            }

        });

    });

</script>


<script>



    $(document).ready(function () {

  
        var date = new Date();
        if($('.p_year').val() == ""){
           
            $('.p_year').val(date.getFullYear());
                      }

        if($('.p_month').val() == ""){
            $('.p_month').val(date.getMonth() + 1);
        }



        if ($('.m_year').val() == "") {

            $('.m_year').val(date.getFullYear());
        }

        if ($('.m_month').val() == "") {
            $('.m_month').val(date.getMonth() + 1);
        }


        $('.stats').val(date.getFullYear());

        $('.quarterly').hide();
        $('.yearly').hide();
        $('.monthly').hide();

