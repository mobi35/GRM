
@model GRM.Models.tbl_Message
@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Shared/adminMaster.cshtml";
}
<style>
    .flex-column {
        margin-top: 8%;
   
    }
</style>


<div style="margin-left:18%; margin-top:2%">
    <!-- Nav pills -->
    <h3 style =" width: 100%; "><span  style ="color: white;background-color: gold; padding: 10px;">Messages</span></h3>
    <br/>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div style="margin-left:20%; width:70%; margin-top:3%">
                <div class="table-responsive">
                    <table style="color:black" id="messages" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>From</th>
                                <th>Message</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{

                                foreach (var msg in ViewBag.messageList)
                                {

                                    <tr>
                                        <td>@msg.sent</td>
                                        <td>@Html.Raw(msg.message.Substring(0, Math.Min(5, msg.message.Length)))</td>
                                        <td>@msg.dateSent</td>
                                        <td>
                                            <form method="post" action="~/Admin/Message/">
                                                <input type="hidden" name="readable" value="@msg.id" />
                                                <input type="hidden" name="reads" value="@msg.sent" />
                                                <input type="submit" class="readz" value="View" name="read" />
                                                <button type="button" onclick="Reply('@msg.sent')" class="butsRep" name="reply">Reply</button>
                                                <input type="submit" value="delete" name="delete" />
                                            </form>




                                        </td>
                                    </tr>

                                }
                            }



                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <h4>Conversation</h4>
        <div style="border:2px solid black; border-radius: 5px; background-color:lightgreen; overflow:scroll;  margin-left:20%!important; width:75%; height:300px;" class="bd-example bg-dark row msgPane">
            <div class="col-md-12">

                @{
                    if (ViewBag.Msg != null)
                    {
                        foreach (GRM.Models.tbl_Message c in ViewBag.Msg)
                        {
                            DateTime date = DateTime.Now;
                            TimeSpan? difference;
                            difference = date - c.dateSent;
                            var dating = "";
                            if (difference.Value.Minutes < 59 && difference.Value.Hours == 0 && difference.Value.Days == 0)
                            {
                                dating = difference.Value.Minutes + " mins ago";
                            }
                            else if (difference.Value.Hours < 24 && difference.Value.Days < 1)
                            {
                                dating = difference.Value.Hours + " hour(s) ago";
                            }
                            else
                            {
                                dating = difference.Value.Days + " day(s) ago";
                            }
                    


                            if (c.sent == Session["userName"].ToString())
                            {
                                <style>
                                    .user {
                                        margin-left: 65%;
                                    }
                                </style>

                                @Html.Raw("<div style='background-color:lightblue;      overflow-wrap:break-word; padding:5px; width:300px; border-radius:2px 2px 2px 2px'  class = 'user'> <small class ='text-muted'> " + dating + " </small> " + "<br>" + c.message + "</div><br>")
                            }
                            else {

                                @Html.Raw("<div style='background-color:white; padding:5px; width:300px; border-radius:2px 2px 2px 2px'>  <strong class='mr-auto'>" + c.sent + " </strong> <small class ='text-muted'>" + dating + "</small><br>" + c.message + "</div><br>")
                            }
                        }
                    }

                }
            </div>
        </div>
        <div style="margin-left:20%; width:75%;">
            <div class="col-md-12">

                <br />
                <form method="post" action="~/Admin/SendMessage">
                    <label>Recepient</label>
                    <select style="padding-right:100px" class="myUsers form-control" name="myUsers">

                        @foreach (var s in ViewBag.userList)
                        {

                            <option name="@s.userName">@s.userName</option>

                        }

                    </select>
                    <br />
                    <label>Message</label>
                    <textarea class="form-control myMessages" name="myMessages"></textarea><br />

                    <button onclick="return submitNow()" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
<br /><br />



<br /><br /><br /><br />

<script src="~/Scripts/jquery223.js"></script>

    <script>

        function submitNow(e) {

            $.ajax({
                type: 'post',
                url: '../../Admin/SendMessage',
                data: { myUsers: $('.myUsers').val(), myMessages: $('.myMessages').val() },
                success: function (e) {
                    if (e == "empty") {
                        $.sweetModal({
                            content: '<h3>Please Insert a message</h3>',
                            icon: $.sweetModal.ICON_ERROR,
                            theme: $.sweetModal.THEME_DARK,
                            onClose: function () {
                                window.open("../../Admin/Message", "_self");
                            }


                        });
                    }
                    $.sweetModal({
                        content: '<h3>Message Sent</h3>',
                        icon: $.sweetModal.ICON_SUCCESS,
                        theme: $.sweetModal.THEME_DARK,
                        onClose: function () {
                            window.open("../../Admin/Message", "_self");
                        }


                    });
                    $('.myUsers').val('');
                    $('.myMessages').val('');

                }


            });
            return false;
        }

        $(document).ready(function () {

            $('.msgPane').animate({ scrollTop: $(document).height() }, 'fast');
        });





        function Reply(rep) {
            $('.myUsers').val(rep).trigger('change');
        }
    </script>



